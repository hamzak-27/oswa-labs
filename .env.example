# Database Configuration
DATABASE_URL=postgresql://cyberlab_user:cyberlab_dev_password@localhost:5432/cyberlab
REDIS_URL=redis://localhost:6379/0

# API Configuration
SECRET_KEY=your-super-secret-jwt-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Guacamole Integration
GUACAMOLE_URL=http://localhost:8080/guacamole
GUACAMOLE_USERNAME=guacadmin
GUACAMOLE_PASSWORD=guacadmin

# Virtualization Platform (Proxmox)
PROXMOX_HOST=your-proxmox-host
PROXMOX_USER=your-proxmox-user
PROXMOX_PASSWORD=your-proxmox-password
PROXMOX_NODE=your-proxmox-node

# VPN Configuration
OPENVPN_SERVER_IP=your-server-ip
OPENVPN_PORT=1194
OPENVPN_PROTOCOL=udp

# File Storage (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=cyberlab-files

# Monitoring
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=cyberlab
INFLUXDB_BUCKET=metrics

# Email Configuration (for user notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password

# Development/Production
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Network Configuration
USER_NETWORK_BASE=10.10.0.0/16
USER_NETWORK_MASK=24
VPN_NETWORK_BASE=10.8.0.0/16

# Lab Session Configuration
DEFAULT_SESSION_DURATION_HOURS=4
MAX_CONCURRENT_SESSIONS_PER_USER=2
VM_STARTUP_TIMEOUT_MINUTES=10
AUTO_CLEANUP_IDLE_SESSIONS_HOURS=6
